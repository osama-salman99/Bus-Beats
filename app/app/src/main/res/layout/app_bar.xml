<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:elevation="10dp"
    android:paddingTop="10dp"
    android:orientation="horizontal">

    <Button
        android:id="@+id/previous_rides_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:drawableTop="@drawable/previous_rides_icon"
        android:drawableTint="@color/colorInactive"
        android:text="@string/previous_rides"
        android:textAllCaps="false"
        android:textColor="@color/colorInactive"
        android:textSize="12sp" />

    <Button
        android:id="@+id/map_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:drawableTop="@drawable/map_icon"
        android:drawableTint="@color/colorActive"
        android:text="@string/map"
        android:textAllCaps="false"
        android:textColor="@color/colorActive"
        android:textSize="12sp" />

    <Button
        android:id="@+id/settings_button"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:drawableTop="@drawable/settings_icon"
        android:drawableTint="@color/colorInactive"
        android:text="@string/settings"
        android:textAllCaps="false"
        android:textColor="@color/colorInactive"
        android:textSize="12sp" />

</LinearLayout>